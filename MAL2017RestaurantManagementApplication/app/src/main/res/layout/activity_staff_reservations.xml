<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/staff_reservations_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Reservations"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View and manage customer reservations"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/notification_icon_container"
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/ic_bell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bell"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/badge_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/pill_label"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="end|top"
                    android:padding="0dp"
                    android:translationX="0dp"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:layout_marginTop="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search by name, email or booking ID..."
                android:textColor="@color/light_text"
                android:background="@null"
                android:padding="0dp"/>

            <ImageView
                android:id="@+id/iv_search_button"
                android:src="@drawable/ic_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Status filter buttons with counts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Filter Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_filter_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filter: Pending Reservations"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"/>

                <TextView
                    android:id="@+id/tv_reset_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show All"
                    android:textSize="12sp"
                    android:textColor="@color/main_orange"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Scrollable Filter Buttons -->
            <HorizontalScrollView
                android:id="@+id/filter_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fadeScrollbars="true">

                <LinearLayout
                    android:id="@+id/filter_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    android:paddingEnd="8dp">

                    <!-- 动态添加的按钮会在这里显示 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilterAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:text="All (0)"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/main_orange"
                        app:cornerRadius="18dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilterPending"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:text="Pending (0)"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/status_pending"
                        app:cornerRadius="18dp"
                        app:strokeColor="@color/status_pending"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilterConfirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:text="Confirmed (0)"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="@color/status_confirmed"
                        app:strokeWidth="1dp"
                        app:cornerRadius="18dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilterCancelled"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Cancelled (0)"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="@color/status_cancelled"
                        app:strokeWidth="1dp"
                        app:cornerRadius="18dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <!-- No reservations message -->
    <TextView
        android:id="@+id/tv_no_reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No reservations found"
        android:textSize="16sp"
        android:textColor="@color/muted_text"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/staff_reservations_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reservations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/staff_reservations_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom nav -->
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/include_staff_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>