<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/staff_menu_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Menu Management"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add, edit or delete menu items"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/notification_icon_container"
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/ic_bell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bell"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/badge_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/pill_label"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="end|top"
                    android:padding="0dp"
                    android:translationX="0dp"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Add New Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:text="ADD NEW"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:icon="@drawable/outline_add_24"
            app:iconTint="@android:color/white"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:backgroundTint="@color/main_orange"
            app:cornerRadius="24dp"
            app:strokeWidth="0dp"
            style="@style/Widget.Material3.Button"
            android:contentDescription="Add new item"/>

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:layout_marginTop="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search menu items..."
                android:textColor="@color/light_text"
                android:background="@null"
                android:padding="0dp"/>

            <ImageView
                android:id="@+id/iv_search_button"
                android:src="@drawable/ic_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Categories spinner -->
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card_rounded"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/staff_menu_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom nav -->
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/include_staff_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>