<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Bottom nav -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            >

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Book a Table"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reserve your spot at our restaurant"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/notification_icon_container"
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/ic_bell"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_bell"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/badge_count"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/pill_label"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="end|top"
                        android:padding="0dp"
                        android:translationX="0dp"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Select Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Select Date"
                android:textColor="@color/light_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/dateContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvDateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="dd/mm/yyyy"
                    android:textColor="@color/muted_text" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar" />
            </LinearLayout>

            <!-- Select Time -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select Time Slot"
                android:textColor="@color/light_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <GridLayout
                android:id="@+id/timeGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="4"
                android:alignmentMode="alignMargins">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="17:00"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="17:30"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="18:00"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="18:30"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="19:00"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="19:30"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="20:00"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="20:30"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="21:00"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="21:30"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="22:00"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="22:30"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </GridLayout>

            <!-- Number of Guests -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Number of Guests"
                android:textColor="@color/light_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMinus"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:icon="@drawable/outline_check_indeterminate_small_24"
                    app:iconTint="#333333"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp" />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:icon="@drawable/outline_add_24"
                    app:iconTint="#333333"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="8dp" />
            </LinearLayout>

            <!-- Special requests -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Special requests (Optional)"
                android:textColor="@color/light_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_special_requests"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_bg"
                android:gravity="top"
                android:hint="E.g., window seat, allergies..."
                android:padding="12dp"
                android:textColor="@color/light_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmBooking"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Confirm Booking"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#FF6900"
                app:cornerRadius="12dp"
                app:rippleColor="#55FFFFFF" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_guest_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
