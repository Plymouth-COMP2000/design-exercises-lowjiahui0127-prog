<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Header with Booking ID and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking ID "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_booking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#B001"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_orange"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Pending"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Guest Info -->
        <TextView
            android:id="@+id/tv_guest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="JIAHUI LOW"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_guest_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lowjiahui0127@gmail.com"
            android:textSize="12sp"
            android:textColor="@color/muted_text"/>

        <!-- Reservation Details -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_calendar_grey"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:id="@+id/tv_booking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="25/12/2025"
                    android:textColor="@color/muted_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_time_grey"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:id="@+id/tv_booking_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="18:00"
                    android:textColor="@color/muted_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_person_grey"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:id="@+id/tv_guest_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="4 guests"
                    android:textColor="@color/muted_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_info_grey"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:id="@+id/tv_special_requests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="allergic to seafood"
                    android:maxLines="2"
                    android:textColor="@color/muted_text"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons for Guest View -->
        <LinearLayout
            android:id="@+id/guest_buttons"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditBooking"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textColor="#2366FC"
                app:backgroundTint="#E9F0FF"
                app:icon="@drawable/ic_editmenu"
                app:iconTint="@null"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Cancel"
                android:textColor="#E70712"
                app:backgroundTint="#FDE6E7"
                app:icon="@drawable/ic_deletemenu"
                app:iconTint="@null"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- Buttons for Staff View -->
        <LinearLayout
            android:id="@+id/staff_buttons"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Confirm"
                android:textColor="#3AAE3F"
                app:backgroundTint="#EBF7EC"
                app:icon="@drawable/ic_confirm_white"
                app:iconTint="#3AAE3F"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Reject"
                android:textColor="#E70712"
                app:backgroundTint="#FDE6E7"
                app:icon="@drawable/ic_cancel_white"
                app:iconTint="#E70712"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>