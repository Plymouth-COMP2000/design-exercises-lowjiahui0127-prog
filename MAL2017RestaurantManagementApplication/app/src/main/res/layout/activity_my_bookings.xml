<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="22dp"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="My Bookings"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_booking_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:textColor="@color/light_text"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/notification_icon_container"
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/ic_bell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bell"
                    android:layout_gravity="center"
                    android:contentDescription="Notifications"/>

                <TextView
                    android:id="@+id/badge_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/pill_label"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="end|top"
                    android:padding="0dp"
                    android:translationX="0dp"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Smart Filter Section -->
        <LinearLayout
            android:id="@+id/filter_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingHorizontal="20dp">

            <!-- Filter Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filter by Status"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"/>

                <!-- Reset Filter (only visible when filtered) -->
                <TextView
                    android:id="@+id/tv_reset_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show All"
                    android:textSize="12sp"
                    android:textColor="@color/main_orange"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Horizontal Scrollable Filter Buttons -->
            <HorizontalScrollView
                android:id="@+id/filter_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                android:fadeScrollbars="true"
                android:paddingVertical="4dp">

                <LinearLayout
                    android:id="@+id/filter_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">

                    <!-- Buttons will be added dynamically here -->

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Bookings List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bookings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"/>

        <!-- No Bookings Message -->
        <TextView
            android:id="@+id/tv_no_bookings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="No bookings found"
            android:textSize="15sp"
            android:textColor="@color/muted_text"
            android:visibility="gone"/>

    </LinearLayout>

    <include layout="@layout/include_guest_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>